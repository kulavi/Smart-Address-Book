<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android" 
     android:layout_height="fill_parent" 
    android:layout_width="wrap_content">
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ScrollView01" 
        android:layout_width="fill_parent" 
        android:background="#FFFAF0"
        android:layout_above="@id/footer"
        android:layout_height="wrap_content">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/homescreen">
  <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/info_table"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
 <TableRow>
 				<TextView
					android:layout_height="wrap_content" 
					android:layout_width="wrap_content" 
					android:textColor="#000000"
					android:paddingLeft="7px"
					android:text="First Name" 
					/>
				<EditText 
					android:layout_height="wrap_content" 
					android:id="@+id/fname" 
					android:hint="first name"
					android:inputType="textCapWords"
					android:textColor="#000000"
					android:layout_width="120px" 
					/>
 			</TableRow>
 			<TableRow android:layout_weight="1">
 				<TextView  
    				android:layout_width="fill_parent" 
    				android:layout_height="10px"
    				/> 
 			</TableRow>
 			<TableRow android:layout_weight="1">
  				<TextView 
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="Middle Name"
					android:paddingLeft="7px"/>
				<EditText 
					android:id="@+id/mname"
					android:hint="middle name" 
					android:layout_width="120px" 
					android:inputType="textCapWords"
					android:textColor="#000000"
					android:layout_height="wrap_content" 
				
					/>
 			</TableRow>
 			<TableRow android:layout_weight="1">
 				<TextView
					android:layout_height="wrap_content" 
					android:layout_width="wrap_content" 
					/>
			</TableRow>
 			<TableRow android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1">
  				<TextView 
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="Last Name "
					android:paddingLeft="7px"/>
				<EditText 
					android:id="@+id/lname"
					android:hint="Last name" 
					android:layout_width="120px" 
					android:textColor="#000000"
					android:inputType="textCapWords"
					android:layout_height="wrap_content" 
				
					/>
 			</TableRow>
 			<TableRow android:layout_weight="1">
 				<TextView
					android:layout_height="wrap_content" 
					android:layout_width="wrap_content" 
					/>
			</TableRow>
 			<TableRow android:layout_weight="1">
  				<TextView 
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="Phone"
					android:paddingLeft="7px"/>
				<EditText 
					android:id="@+id/ph" 
					android:layout_width="120px" 
					android:textColor="#000000"
					android:hint="phone no"
					   android:inputType="phone"
					android:layout_height="wrap_content" 
					
					/>
 			</TableRow>
 			<TableRow android:layout_weight="1">
 				<TextView
					android:layout_height="wrap_content" 
					android:layout_width="wrap_content" 
					/>
			</TableRow>
 			
		<TableRow android:layout_weight="1">
  				<TextView 
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="Email ID "
					android:paddingLeft="7px"/>
				<EditText 
					android:id="@+id/email" 
					android:layout_width="120px" 
					android:hint="email id"
					android:inputType="textEmailAddress"
					android:textColor="#000000"
					android:layout_height="wrap_content" 
				
					/>
 			</TableRow> 
 			
 			<TableRow >
 				<TextView
					android:layout_height="wrap_content" 
					android:layout_width="wrap_content" 
					/>
			</TableRow>
 			
		<TableRow android:layout_weight="1">
  				<TextView 
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:textColor="#000000" 
					android:textStyle="bold"
					android:text="Password "
					android:paddingLeft="7px"/>
				<EditText 
					android:id="@+id/pass" 
					android:layout_width="120px" 
					android:textColor="#000000"
					android:hint="password"
					android:layout_height="wrap_content" 
					android:password="true"
					
					/>
 			</TableRow> 
 			<TableRow android:layout_weight="1">
 				<TextView
					android:layout_height="wrap_content" 
					android:layout_width="wrap_content" 
					/>
			</TableRow>
 			<TableRow android:layout_weight="1">
  				<TextView 
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="Confirm"
					android:paddingLeft="7px"/>
				<EditText 
					android:id="@+id/rp" 
					android:layout_width="120px"
					android:hint="renter password" 
					android:textColor="#000000"
					android:layout_height="wrap_content" 
					android:password="true" 
					/>
 			</TableRow>
 			<TableRow android:layout_weight="1">
 				<TextView
					android:layout_height="wrap_content" 
					android:layout_width="wrap_content" 
					/>
			</TableRow>
 			<TableRow >
  				<TextView 
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:text="Gender"
					android:paddingLeft="7px"/>
				<RadioGroup android:layout_width="wrap_content" 
      android:layout_height="wrap_content" 
      android:id="@+id/Group1">
            <RadioButton android:id="@+id/female" 
                android:text="Female" 
                android:layout_width="120px" 
                android:layout_height="wrap_content" 
                android:textColor="#000000"/>
           <RadioButton android:id="@+id/male" 
                android:text="Male" 
                android:layout_width="120px" 
               android:textColor="#000000"
				android:layout_height="wrap_content"/>
            </RadioGroup> 
 			</TableRow>
 			<TableRow android:layout_weight="1">
 				<TextView
					android:layout_height="wrap_content" 
					android:layout_width="wrap_content" 
					/>
			</TableRow>     
 			
	</TableLayout>

	<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/info_table1"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		
			
				<TextView
		android:id="@+id/text1" 
		android:layout_height="wrap_content" 
		android:layout_width="wrap_content"
		android:paddingLeft="50px"
		android:textColor="#000000"
		android:text="" 
		/>
	</TableLayout>
			
	<TextView  
   	 	android:layout_width="320px" 
    	android:layout_height="wrap_content"/> 
		
	
		
	<TextView
		android:id="@+id/text2" 
		android:layout_height="wrap_content" 
		android:layout_width="wrap_content"
		android:textColor="#000000"
		android:text="" 
		/>
	<TextView
		android:id="@+id/text" 
		android:layout_height="wrap_content" 
		android:layout_width="wrap_content"
		android:textStyle="bold"
		android:textColor="#FF0000"
		android:paddingLeft="50px"
		android:text="" 
		/>		
	<TextView
		android:id="@+id/text3" 
		android:layout_height="wrap_content" 
		android:layout_width="wrap_content"
		/>
	<TextView
		android:id="@+id/text4" 
		android:layout_height="wrap_content" 
		android:layout_width="wrap_content" 
		/>
	<TextView
		android:id="@+id/text5" 
		android:layout_height="wrap_content" 
		android:layout_width="wrap_content" 
		/>
	
 </LinearLayout>
</ScrollView>
<LinearLayout android:id="@+id/footer"
 android:layout_width="wrap_content"
    android:layout_height="55px" 
    android:orientation="horizontal"
    android:layout_alignParentBottom="true" 
    android:gravity="center_vertical|center_horizontal"
    
    style="@android:style/ButtonBar">

    <Button  android:id="@+id/reg"  
    android:layout_width="wrap_content"
        android:layout_height="55px"
         android:layout_weight="1"
        android:text="Register" />
       <TextView
android:layout_width="20px"
android:layout_height="wrap_content"
/> 
<Button android:id="@+id/cancel" 
    android:layout_width="wrap_content"
        android:layout_height="55px"
         android:layout_weight="1"
        android:text="Cancel" />
        </LinearLayout>
   </RelativeLayout>